{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "i18nConfig.js",
    "src/app/i18n.ts",
    "src/app/TranslationsProvider.js",
    "src/app/[locale]/components/Magnetic.jsx",
    "src/app/[locale]/components/magnetic/Magnetic.jsx",
    "src/app/[locale]/components/Nav/anim.js",
    "src/app/[locale]/components/Projects/projects-list.tsx",
    "src/app/[locale]/components/slider/slider.jsx"
  ],
  "exclude": ["node_modules"]
}
